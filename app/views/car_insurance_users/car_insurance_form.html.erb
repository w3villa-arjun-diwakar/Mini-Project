
<div class="container login-container">
  <div class="row ">
      <div class="col-md-6">
        <%= image_tag("pankaj.avif",class: 'd-block w-100 life-insurance-form pankaj-photo') %>
      </div>
      <div class="col-md-6">
        <h4 class="text-muted">Compare & <b>Save upto 85%*</b> on Car Insurance</h4>
            <p class="text-muted renew-in-2-minutes">Renew in 2 minutes</p>
        <div class="form-group row login-box needs-validation" >

                <%= form_with(url: car_insurance_user_path,method: :post, html:{id: "carinsuranceform" }) do |form| %>
                    <div class="form-group row">
                    <%= form.label :Car_number ,class:"col-form-label text-light"%>
                        <%= form.text_field :car_number , class:"form-control",style:"text-transform: uppercase;"%>
                    </div>
                    <div class="form-group row">
                    <%= form.label :Name, class:"col-form-label text-light" %>
                        <%= form.text_field :name, class:"form-control" %>
                    </div>
                    <div class="form-group row">
                    <%= form.label :email ,class:"col-form-label text-light"%>
                        <%= form.text_field :email , class:"form-control" %>
                    </div>
                    <div class="form-group row">
                        <%= form.label :phone ,class:"col-form-label text-light"%>
                        <%= form.text_field :phone , class:"form-control" %>
                    </div>
                    
                    <div class="form-group row">
                    <%= form.submit "VIEW PRICES", class:"btn btn-outline-info btn-lg mt-2 "%>
                    </div>
                <% end %>
        </div>
      </div>
  </div>
</div>


<script>
   $(document).on("turbolinks:load",function(){
    $("#carinsuranceform").validate({
     rules: {
      "car_number":{
          required: true
      },
      "name":{
          required: true
      },
      "phone":{
          required: true,
          minlength:10,
          maxlength:10
        
      },
      "email":{
          required: true,
          email: true
      },
  },
     messages: {
      "car_number":{
           required: "Please enter valid car number"
           
      },
      "name":{
           required: "Please enter valid name"
      },
      "phone":{
           required: "Please enter valid phone no.",
           minlength: "minimum length is 10 digits",
           maxlength: "maximum length is 10 digits",
           
      },
      "email":{
           required: "Please enter valid email",
           email: "Must be in  the proper format"
           
      },
    },
});
     });
</script>
<div class="container">
<h1 class="text-center">Users</h1>
<p id="notice"><%= notice %></p>
<div class="box shadow rounded">
  <table class="table table-hover table-striped table-bordered company-table ">
    <thead>
      <tr class="table-primary">
          <th><i>Profile</i></th>
          <th><i>Name</i></th>
          <th><i>Email</i></th>
          <th><i>Gender</i></th>
          <th><i>Phone</i></th>
          <th><i>Action</i></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <% if user.avatar_thumbnail.present?%>
              <%= image_tag(user.avatar_thumbnail, class:"card-img-top ") %> 
            <% else %>
              <%= image_tag("user2.png", class:"card-img-top")%> 
            <%end %> 
          </td>
          <td><p><%= user.name %></p></td>
          <td><p><%= user.email %></p></td>
          <td><p><%= user.gender %><p></td>
          <td><p><%= user.phone %><p></td>
            <td><p><%= link_to 'Show',user_path(user),class:"btn btn-primary" %></p></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
</div>




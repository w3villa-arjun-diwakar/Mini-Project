<div class="container user-container">
  <h1 class="text-center"><%=@user.name%>'s Details</h1><hr><br>
  <div class="row justify-content-center">
    <div class="col-md-3">
      <div class="card-body">
        <% if @user.avatar_thumbnail.present?%>
       <%= image_tag(@user.avatar_thumbnail, class:"card-img-top policy-images ") %> 
      <% else %>
         <%= image_tag("user2.png", class:"card-img-top policy-images policy-images")%> 
      <%end %>
          <b class="card-title"><%= @user.name %></b>
          <p class="card-text">Email: <%=@user.email%></p>
          <p class="card-text">Phone: <%=@user.phone%></p>
          <p class="card-text">Age: <%=@user.age%></p>
          <p class="card-text">Gender: <%=@user.gender%></p>
          
          <%= link_to 'Edit Profile',edit_user_registration_path,class:"btn btn-outline-warning" %>
        <p>
      </div>
    </div>
  </div>  
</div>
     


